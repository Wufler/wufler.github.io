generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Projects {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  img         String
  href        String
  category    String
  status      String[]
  tags        String[]
  visible     Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
}

model Builds {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  img         String
  status      String[]
  tags        String[]
  visible     Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
}
